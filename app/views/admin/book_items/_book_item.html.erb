<tr>
  <td><%= book_item_counter + 1 %></td>
  <td><%= book_item.bar_code %></td>
  <td><%= number_to_currency book_item.price %></td>
  <td><span class="badge badge-<%= to_item_status_badge book_item %>">
    <%= book_item.status %></span>
  </td>
  <td>
    <%= link_to t(".detail"), [:admin, book_item.book, book_item],
        class: "btn btn-info" %>
    <%= link_to t(".edit"),
        edit_admin_book_book_item_path(book_item.book, book_item),
        class: "btn btn-success" %>
    <% if book_item.book_lendings.count.zero? %>
      <%= link_to t(".delete"),[:admin, book_item.book, book_item],
          class: "btn btn-danger", data: {turbo_method: :delete} %>
    <% end %>
  </td>
</tr>
